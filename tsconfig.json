{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["DOM", "ES2018", "ESNext.WeakRef"],
    "jsx": "react-jsx",
    "module": "commonjs",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["packages/*/src/**/*.ts", "packages/*/src/**/*.tsx", "packages/*/rollup.config.ts", "packages/*/tools/**/*.ts"]
}
